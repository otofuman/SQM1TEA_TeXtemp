%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%マクロ定義
\newcommand{\LRA}{
  \Longleftrightarrow
}
\newcommand{\eq}[1]{
  \[ {#1} \]
}
\newcommand{\eql}[2]{
  \begin{equation}
    {#1} \label{#2}
  \end{equation}
}
\newcommand{\fr}[2]{
  \frac{#1}{#2}
}
\newcommand{\dd}[2]{
  \frac{\partial {#1}}{\partial {#2}}
}
\newcommand{\ddn}[3]{
  \frac{\partial^{#3} {#1}}{\partial {#2}^{#3}}
}
\newcommand{\perm}[2]{
  {}_{#1} P _{#2}
}
\newcommand{\conb}[2]{
  {}_{#1} C _{#2}
}
\newcommand{\pmat}[1]{
  \begin{pmatrix}
    {#1}
  \end{pmatrix}
}
\newcommand{\bmat}[1]{
  \begin{bmatrix}
    {#1}
  \end{bmatrix}
}
\newcommand{\vmat}[1]{
  \begin{vmatrix}
    {#1}
  \end{vmatrix}
}
\newcommand{\case}[1]{
  \left
    \{
    \begin{array}{l}
      #1
    \end{array}
  \right.
}
